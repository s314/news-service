<% provide(:title, "Log in") %>
<h1 class="mt-4 text-center">Вход в аккаунт</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, 'E-mail' %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, 'Пароль' %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :remember_me, class: "checkbox inline mt-2" do %>
          <%= f.check_box :remember_me %>
          <span>Запомнить меня на этом компьютере</span>
        <% end %>

        <br/>
        <%= f.submit "Войти", class: "btn btn-primary mt-2" %>
      <% end %>

      <div class="mt-4">Новый пользователь? <%= link_to "Зарегистрируйтесь сейчас!", signup_path %></div>
    </div>
  </div>
</div>