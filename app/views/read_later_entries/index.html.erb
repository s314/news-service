<!-- Full Page Image Header with Vertically Centered Content -->
<header class="scdhead">
  <div class="container h-100">
    <div class="row h-100 align-items-center text-light">
      <div class="col-12">
        <h1 class="font-weight-light">Почитать позже</h1>
      </div>
    </div>
  </div>
</header>

<section class="py-5">
  <div class="container-fluid">

    <div class="row">
      <div class="col-sm-3 px-1">
        <div class="py-4 sticky-top flex-grow-1">
          <div class="nav nav-pills flex-sm-column">
            <div class="nav-link d-none d-sm-inline">Навигация по категориям</div>
          </div>
        </div>
      </div>

      <!-- Card columns -->
      <div class="col" id="main">
        <div class="card-columns">
          <% @list.each do |entry| %>
            <div class="card">
              <img class="card-img" src="<%= entry["image"] %>" alt="Card image">
              <div class="card-body myBox">
                <h5 class="card-title"><%= entry["title"] %> <span class="badge badge-secondary"><%= entry["class"] %></span></h5>
                <p class="card-text"><%= entry["description"] %></p>
                <p class="card-text"><small class="text-muted">Posted <%= entry["date"] %></small></p>
                <%= link_to "Read more...", entry["link"], class: "stretched-link" %>
                <%= button_to 'Remove', read_later_entry_path(entry), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-small" %>
              </div>
            </div>
          <% end %>
        </div>

        <%= will_paginate(@list, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, :previous_label => '&laquo;', :next_label => '&raquo;', :class => "pagination justify-content-center") %>

      </div>

      <!-- Card columns -->


    </div>
  </div>
</section>